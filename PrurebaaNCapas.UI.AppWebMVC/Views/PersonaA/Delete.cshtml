@model PrurebaaNCapas.EntidadesDeNegocio.PersonaA

@{
    ViewData["Title"] = "Eliminar";
}

<div class="row" style="margin-top:70px;">
    <div class="card">
        <div class="card-header row">
            <h1 class="card-text">Eliminar persona</h1>
        </div>
        <div class="card-body row">
            <dl class="row">

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Direccion)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Direccion)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FechaNacimiento)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FechaNacimiento)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Telefono)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Telefono)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CorreoElectronico)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CorreoElectronico)
                </dd>
            </dl>

            <form asp-action="Delete" class="col-md-12 row">
                <input type="hidden" asp-for="Id" />
                <div class="col-md-6" style="margin-top:10px;">
                    <input style="width:100%;" type="submit" value="Eliminar" class="btn btn-danger" />
                </div>
                <div class="col-md-6" style="margin-top:10px;">
                    <a style="width:100%;" class="btn btn-secondary" asp-action="Index">Cancelar</a>
                </div>
            </form>
        </div>
    </div>

</div>
