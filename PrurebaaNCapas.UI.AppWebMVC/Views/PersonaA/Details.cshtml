@model PrurebaaNCapas.EntidadesDeNegocio.PersonaA

@{
    ViewData["Title"] = "Detalle";
}

<div class="row" style="margin-top:70px;">
    <div class="card">
        <div class="card-header row">
            <h1 class="col-md-12">Detalles de persona</h1>
        </div>
        <div class="card-body row">
            <dl class="row">

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Direccion)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Direccion)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FechaNacimiento)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FechaNacimiento)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Telefono)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Telefono)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CorreoElectronico)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CorreoElectronico)
                </dd>
            </dl>


            <div class="col-md-6">
                @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-success", style = "width:100%;" })
            </div>
            <div class="col-md-6">
                <a class="btn btn-secondary" style="width:100%;" asp-action="Index">Cancelar</a>
            </div>
        </div>
    </div>
</div>